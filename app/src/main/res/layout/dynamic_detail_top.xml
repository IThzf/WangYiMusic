<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:id="@+id/rl_item_dynamicDetail">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/wangyiiocn"
            android:id="@+id/item_dynamicDetail_iv_userAvatar"/>

        <RelativeLayout
            android:id="@+id/dynamicDetai_lrelativeTop"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/item_dynamicDetail_iv_userAvatar">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="存在"
                android:textSize="14dp"
                android:textColor="#0061b2"
                android:gravity="center_vertical"
                android:id="@+id/item_dynamicDetail_tv_userName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/item_dynamicDetail_tv_userName"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/item_dynamicDetail_tv_contentType"
                android:text="分享单曲"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/item_dynamicDetail_tv_time"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="8月3号"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/item_dynamicDetail_tv_contentType"/>
        </RelativeLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="+ 关注"
            android:textSize="14dp"
            android:textColor="#d81e06"
            android:layout_toEndOf="@+id/dynamicDetai_lrelativeTop"
            android:layout_alignParentEnd="true"
            android:gravity="top|end"
            android:id="@+id/item_dynamicDetail_tv_focus"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="又是一年七月如常，物是人非各赴刑场。分分和和梦境一场，离离散散才看荒凉"
            android:id="@+id/item_dynamicDetail_tv_comment"
            android:layout_below="@+id/dynamicDetai_lrelativeTop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/ll_item_dynamicDetail_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/item_dynamicDetail_tv_comment">

            <ImageView
                android:id="@+id/dynamicDetail_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scene"/>
        </LinearLayout>



    </RelativeLayout>





</LinearLayout>
