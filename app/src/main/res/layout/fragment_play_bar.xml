<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.task.android.wangyiyun.fragement.PlayBarFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dbdbdb">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/musicImage_controlPlayMenu_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wangyiiocn"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="像我这样的人"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="三毛"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/playbar_btn_play"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/playbar_btn_playlist"/>
    </LinearLayout>

</FrameLayout>
